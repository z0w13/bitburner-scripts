{
  "include": [
    "NetscriptDefinitions.d.ts",
    "vite.config.ts",
    "src/**/*.ts",
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "strict": true,
    "allowJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "paths": {
      "@/*": ["./src/*"],
      "@ns": [ "./NetscriptDefinitions.d.ts" ]
    }
  }
}
